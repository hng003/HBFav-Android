<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/HBFav.ActionBar</item>
        <item name="android:actionDropDownStyle">@style/customActionBarDropDownStyle</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>

    <style name="customActionBarDropDownStyle" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_ab</item>
    </style>

    <style name="HBFav.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/hatena_color</item>
        <item name="android:titleTextStyle">@style/HBFav.ActionBar.TitleTextStyle</item>
    </style>

    <style name="HBFav.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
